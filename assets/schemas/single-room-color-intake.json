ch", "type": "array", "items": { "type": "string" }, "uniqueItems": true }, "superWipeableWalls": { "title": "Need super wipeable walls?", "type": "boolean" }, "smallColorPopOk": { "title": "Small color pop okay?", "type": "boolean" } } }, "laundryMudroom": { "title": "Laundry / Mudroom details", "type": "object", "additionalProperties": false, "properties": { "traffic": { "title": "Traffic", "type": "string", "enum": ["high", "medium", "low"] }, "cabinetsShelving": { "title": "Cabinets/shelving present?", "type": "string", "enum": ["yes", "no"] }, "cabinetsColor": { "title": "If yes, what color?", "type": "string" }, "hideDirtOrBrightClean": { "title": "Hide dirt better or feel bright + clean?", "type": "string", "enum": ["hideDirtBetter", "brightClean"] }, "doorColorMomentOk": { "title": "Door color moment okay?", "type": "boolean" } }, "allOf": [ { "if": { "properties": { "cabinetsShelving": { "const": "yes" } } }, "then": { "required": ["cabinetsColor"] } } ] }, "entryHall": { "title": "Entry / Hall / Stairs details", "type": "object", "additionalProperties": false, "properties": { "naturalLight": { "title": "Natural light", "type": "string", "enum": ["lots", "some", "little"] }, "stairsBanister": { "title": "Stairs/banister", "type": "string", "enum": ["none", "wood", "painted"] }, "woodTone": { "title": "If wood, what tone?", "type": "string" }, "paintColor": { "title": "If painted, what color?", "type": "string" }, "feel": { "title": "Want this area to feel", "type": "string", "enum": ["airyWelcome", "dramaticHello"] }, "doorColorMoment": { "title": "Front/inside door as a color moment?", "type": "boolean" } }, "allOf": [ { "if": { "properties": { "stairsBanister": { "const": "wood" } } }, "then": { "required": ["woodTone"] } }, { "if": { "properties": { "stairsBanister": { "const": "painted" } } }, "then": { "required": ["paintColor"] } } ] }, "otherRoom": { "title": "Other room details", "type": "object", "additionalProperties": false, "properties": { "describeRoom": { "title": "Tell us about this room", "type": "string", "minLength": 1 } }, "required": ["describeRoom"] } }, "examples": [ { "roomType": "kitchen", "usage": "Family of four. We cook daily and hang out at the island.", "moodWords": ["calm", "fresh", "warm"], "daytimeBrightness": "kindaBright", "bulbColor": "neutral_3000_3500K", "boldDarkerSpot": "maybe", "colorsToAvoid": ["red"], "brandPreference": "SherwinWilliams", "existingElements": { "floorLook": "yellowGoldWood", "bigThingsToMatch": ["countertops", "backsplash", "appliances"], "metals": "silver", "mustStaySame": "Trim stays white." }, "colorComfort": { "overallVibe": "neutralsPlusGentleColors", "warmCoolFeel": "inBetween", "contrastLevel": "medium", "popColor": "maybe" }, "finishes": { "wallsFinishPriority": "easierToWipeClean", "trimDoorsFinish": "aLittleShiny", "specialNeeds": ["greaseHeavyCooking", "kids"] }, "roomSpecific": { "cabinets": "keepCurrentColor", "cabinetsCurrentColor": "soft white", "island": "hasIsland_okDarker", "countertopsDescription": "white with gray veins", "backsplash": "white", "appliances": "stainless", "wallFeel": "lightAiry", "darkerSpots": ["island"] }, "guardrails": { "mustHaves": ["Keep it bright, easy to clean"], "hardNos": ["no purple undertones"] }, "photos": ["https://example.com/photo1.jpg"] } ] }
