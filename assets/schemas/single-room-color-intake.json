{ "$schema": "https://json-schema.org/draft/2020-12/schema", "$id": "https://colrvia.com/schemas/single-room-color-intake.json", "title": "Single-Room Color Interview", "description": "Simple questions for one room so we can pick colors that look great and are easy to live with.", "type": "object", "additionalProperties": false, "properties": { "roomType": { "title": "Which room are we doing?", "description": "Pick one.", "type": "string", "enum": [ "kitchen", "bathroom", "bedroom", "livingRoom", "diningRoom", "office", "kidsRoom", "laundryMudroom", "entryHall", "other" ] }, "usage": { "title": "Who uses this room most, and what do you do here?", "type": "string", "minLength": 1 }, "moodWords": { "title": "Three words for the mood you want", "description": "Examples: calm, cozy, happy, fresh, focused, moody, bright.", "type": "array", "items": { "type": "string", "minLength": 1, "maxLength": 20 }, "minItems": 1, "maxItems": 3, "uniqueItems": true }, "daytimeBrightness": { "title": "How bright is it in the day?", "type": "string", "enum": ["veryBright", "kindaBright", "dim"] }, "bulbColor": { "title": "At night, what kind of bulbs?", "type": "string", "enum": ["cozyYellow_2700K", "neutral_3000_3500K", "brightWhite_4000KPlus"] }, "boldDarkerSpot": { "title": "Do you like a bold darker spot in this room?", "type": "string", "enum": ["loveIt", "maybe", "noThanks"] }, "colorsToAvoid": { "title": "Any colors you do NOT want?", "type": "array", "items": { "type": "string", "minLength": 1, "maxLength": 20 }, "minItems": 0, "maxItems": 6, "uniqueItems": true }, "brandPreference": { "title": "Pick one paint brand (or let me choose)", "type": "string", "enum": ["SherwinWilliams", "BenjaminMoore", "Behr", "pickForMe"] }, "existingElements": { "title": "What’s already in the room?", "type": "object", "additionalProperties": false, "properties": { "floorLook": { "title": "Floors look mostly", "type": "string", "enum": [ "yellowGoldWood", "orangeWood", "redBrownWood", "brownNeutral", "grayBrown", "tileOrStone", "other" ] }, "floorLookOtherNote": { "title": "If other, tell us", "type": "string" }, "bigThingsToMatch": { "title": "Big things to match (check all that apply)", "type": "array", "items": { "type": "string", "enum": [ "countertops", "backsplash", "tile", "bigFurniture", "rug", "curtains", "builtIns", "appliances", "fireplace", "none" ] }, "uniqueItems": true }, "metals": { "title": "If metal shows, what is it?", "type": "string", "enum": ["black", "silver", "goldWarm", "mixed", "none"] }, "mustStaySame": { "title": "Anything that must stay the same color?", "description": "Example: “trim stays white,” “cabinets stay navy.”", "type": "string" } } }, "colorComfort": { "title": "Your color comfort", "type": "object", "additionalProperties": false, "properties": { "overallVibe": { "title": "Overall vibe for color", "type": "string", "enum": [ "mostlySoftNeutrals", "neutralsPlusGentleColors", "confidentColorMoments" ] }, "warmCoolFeel": { "title": "Warm vs cool feel", "type": "string", "enum": ["warmer", "cooler", "inBetween"] }, "contrastLevel": { "title": "Contrast level", "type": "string", "enum": ["verySoft", "medium", "crisp"] }, "popColor": { "title": "Would you enjoy one small “pop” color?", "type": "string", "enum": ["yes", "maybe", "no"] } } }, "finishes": { "title": "Cleanability & finish", "type": "object", "additionalProperties": false, "properties": { "wallsFinishPriority": { "title": "Walls", "type": "string", "enum": ["easierToWipeClean", "softerFlatterLook"] }, "trimDoorsFinish": { "title": "Trim/doors", "type": "string", "enum": ["aLittleShiny", "softerShine"] }, "specialNeeds": { "title": "Any special needs?", "type": "array", "items": { "type": "string", "enum": [ "kids", "pets", "steamyShowers", "greaseHeavyCooking", "rentalRules" ] }, "uniqueItems": true } } }, "roomSpecific": { "title": "Room details", "type": "object" }, "guardrails": { "title": "Final guardrails", "type": "object", "additionalProperties": false, "properties": { "mustHaves": { "title": "Must-haves (please include…)", "type": "array", "items": { "type": "string", "minLength": 1 }, "uniqueItems": true }, "hardNos": { "title": "Hard NOs (please avoid…)", "type": "array", "items": { "type": "string", "minLength": 1 }, "uniqueItems": true } } }, "photos": { "title": "Optional photos", "description": "Links or uploads: 2–3 daytime, 1 nighttime.", "type": "array", "items": { "type": "string", "format": "uri" }, "uniqueItems": true } }, "required": [ "roomType", "usage", "moodWords", "daytimeBrightness", "bulbColor", "boldDarkerSpot", "brandPreference" ], "allOf": [ { "if": { "properties": { "existingElements": { "properties": { "floorLook": { "const": "other" } } } }, "required": ["existingElements"] }, "then": { "properties": { "existingElements": { "required": ["floorLookOtherNote"] } } } }, { "$ref": "#/$defs/branchByRoom" } ], "$defs": { "branchByRoom": { "allOf": [ { "if": { "properties": { "roomType": { "const": "kitchen" } } }, "then": { "properties": { "roomSpecific": { "$ref": "#/$defs/kitchen" } }, "required": ["roomSpecific"] } }, { "if": { "properties": { "roomType": { "const": "bathroom" } } }, "then": { "properties": { "roomSpecific": { "$ref": "#/$defs/bathroom" } }, "required": ["roomSpecific"] } }, { "if": { "properties": { "roomType": { "const": "bedroom" } } }, "then": { "properties": { "roomSpecific": { "$ref": "#/$defs/bedroom" } }, "required": ["roomSpecific"] } }, { "if": { "properties": { "roomType": { "const": "livingRoom" } } }, "then": { "properties": { "roomSpecific": { "$ref": "#/$defs/livingRoom" } }, "required": ["roomSpecific"] } }, { "if": { "properties": { "roomType": { "const": "diningRoom" } } }, "then": { "properties": { "roomSpecific": { "$ref": "#/$defs/diningRoom" } }, "required": ["roomSpecific"] } }, { "if": { "properties": { "roomType": { "const": "office" } } }, "then": { "properties": { "roomSpecific": { "$ref": "#/$defs/office" } }, "required": ["roomSpecific"] } }, { "i